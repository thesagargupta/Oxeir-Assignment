# Environment Configuration for Workshop Schedule App

# Application
NODE_ENV=development
APP_NAME=Workshop Schedule
APP_VERSION=1.0.0

# Server Configuration
PORT=3001
HOST=localhost
CLIENT_URL=http://localhost:5174

# Database
MONGODB_URI=mongodb://localhost:27017/workshop-schedule
DATABASE_NAME=workshop-schedule

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Real-time Features
ENABLE_WEBSOCKETS=true
SOCKET_IO_CORS_ORIGIN=http://localhost:5174


# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security
CORS_ORIGIN=http://localhost:5174
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_FORMAT=combined

# Analytics
ENABLE_ANALYTICS=true



# Workshop Features
AUTO_APPROVE_REGISTRATIONS=true
ENABLE_WAITLIST=true
ENABLE_WORKSHOP_RECORDINGS=true
ENABLE_CERTIFICATES=true

# Development
DEBUG=workshop:*
ENABLE_SWAGGER=true
SWAGGER_URL=/api/docs